<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="seon.startmodule.mapper.BoardMapper">

    <select id="getBoardList" resultType="seon.startmodule.dto.BoardDTO">
        select   id
               , type
               , title
               , content
        from board
    </select>
    <select id="getBoard" resultType="seon.startmodule.dto.BoardDTO">
        select   id
             , type
             , title
             , content
        from board
        where id = #{id}
    </select>

</mapper>
